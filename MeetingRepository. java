import java.sql.*;

public class MeetingRepository {

    public void addMeeting(String date, String description) {
        String sql = "INSERT INTO Meetings(date, description) VALUES(?, ?)";
        try (Connection conn = DBHelper.connect();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            pstmt.setString(1, date);
            pstmt.setString(2, description);
            pstmt.executeUpdate();
            System.out.println("âœ… Meeting added successfully!");
        } catch (SQLException e) {
            System.out.println("âŒ Error adding meeting: " + e.getMessage());
        }
    }

    public void viewMeetings() {
        String sql = "SELECT * FROM Meetings";
        try (Connection conn = DBHelper.connect();
             Statement stmt = conn.createStatement();
             ResultSet rs = stmt.executeQuery(sql)) {
            System.out.println("\n--- Meetings List ---");
            while (rs.next()) {
                System.out.println(rs.getInt("id") + " | " +
                                   rs.getString("date") + " | " +
                                   rs.getString("description"));
            }
        } catch (SQLException e) {
            System.out.println("âŒ Error viewing meetings: " + e.getMessage());
        }
    }
}
